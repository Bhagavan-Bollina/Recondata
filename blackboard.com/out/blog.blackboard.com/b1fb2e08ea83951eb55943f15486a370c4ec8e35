<script>
jQuery(document).ready( function($){	
	$('.dropdown-menu li a').click(function(){
		$(this).parents('.dropdown').find('.bb-button').html($(this).text());
		$(this).parents('.dropdown').find('.bb-button').val($(this).data(''));
        $(this).parents('.dropdown').find('.bb-button').val($(this).data('slug'));
		
		if($(this).text() == 'View by Category'){
			$('.filter-conditional').removeClass('d-block').addClass('d-none');
			$('.filter-market .bb-button').text('- Select Market -');
			$('.filter-author .bb-button').text('- Select Author -');
			$('.filter-category, .clear-filter').removeClass('d-none').addClass('d-block');
            
		}
		
		if($(this).text() == 'View by Market'){
			$('.filter-conditional').removeClass('d-block').addClass('d-none');
			$('.filter-category .bb-button').text('- Select Category -');
			$('.filter-author .bb-button').text('- Select Author -');
			$('.filter-market, .clear-filter').removeClass('d-none').addClass('d-block');
		}
		
		if($(this).text() == 'View by Author'){
			$('.filter-conditional').removeClass('d-block').addClass('d-none');
			$('.filter-market .bb-button').text('- Select Market -');
			$('.filter-category .bb-button').text('- Select Category -');
			$('.filter-author, .clear-filter').removeClass('d-none').addClass('d-block');
		}
        
        if( $(this).parents('.dropdown').hasClass('filter-author') ){
            $(this).parents('.dropdown').find('.bb-button').attr('name', $(this).attr('name'));
        }
        
	});
	
	$('.clear-filter').click(function(){
        $('.filter-main .bb-button').text('View All')
		$('.filter-market .bb-button').text('- Select Market -');
		$('.filter-category .bb-button').text('- Select Category -');
		$('.filter-author .bb-button').text('- Select Author -');
		$('.filter-author, .filter-category, .filter-market, .clear-filter').removeClass('d-block').addClass('d-none');
		
		$('.bb-filters .dropdown').each(function(){
			$(this).find('.bb-button').val($(this).data(''));
            $(this).find('.bb-button').attr('name', '');
		});
		
		
	});

});
</script>


