			<script>
			jQuery(document).ready(function($){
				
				
				$(window).click(function() {
					$('.bb-tool').removeClass('active');
					$('.bb-tool-drop').removeClass('active');
					$('.bb-close-btn').css({display: 'none'});
                    
                    if( $('.bb-lightbox').hasClass('active')){
                        $('.bb-lightbox').removeClass('active');
                        $('.gform_wrapper').appendTo('#form_wrapper .form-container');
                    }
                    
				});
				
				$('.bb-tools .bb-tool').bind('click', function(event){
					event.stopPropagation();
					var tool_index = $(this).index() + 1;
										
					if($(this).hasClass('active')){
						$(this).removeClass('active');
						$('.bb-tool-drop').removeClass('active');
					} else{
						$('.bb-tool').removeClass('active');
                        $('.bb-tool-drop').removeClass('active');
						$(this).addClass('active');
                        $(this).find('.bb-tool-drop').addClass('active');
					}
					
				});
				
				
				
				$('.bb-menu-btn').bind('click', function(){
					if($(this).hasClass('active')){
						$(this).removeClass('active');
						$('.bb-blog-menu-wrap').removeClass('active');
						$('.bb-tools').removeClass('active');
						$('#bb_nav').removeClass('active');
					} else{
						$(this).addClass('active');
						$('.bb-blog-menu-wrap').addClass('active');
						$('.bb-tools').addClass('active');
						
						$('#bb_nav').addClass('active');
					}
				});
				
				$('.menu-item-has-children').bind('click', function(){
					if($(this).hasClass('active')){
						$(this).removeClass('active');
					} else{
						$('.menu-item-has-children').removeClass('active');
						$(this).addClass('active');
					}
				});
                
                
                $('.email-btn').bind('click', function(event){
                    event.stopPropagation();
                    $('.bb-lightbox').addClass('active');
                    $('.gform_wrapper').appendTo('.bb-form-wrap .form-container');
                });
                
                $('.bb-form-wrap, .bb-tool-drop').bind('click', function(event){
                   event.stopPropagation(); 
                });
                
                $('.bb-lightbox .close-btn').bind('click', function(){
                    $('.bb-lightbox').removeClass('active');
                    $('.gform_wrapper').appendTo('#form_wrapper .form-container');
                });
								
			});
			</script>
			
